<div class="home-header">
    <h1>Todos os pensamentos</h1>
    {{#if toughtsQty}}
        <p>Foram encontrados <span>{{toughtsQty}}</span> pensamento(s)</p>
    {{else}}
        <p>Nenhum pensamento foi encontrado para {{search}}</p>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Pesquisar pensamento..." value="{{search}}">
        <input type="submit" value="Buscar" class="btn">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>

        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>

        <a href="/">Limpar</a>
    </div>
</div>

<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>
                Por: <span>{{this.User.name}}</span>
            </figcaption>
        </figure>
    {{/each}}
</div>